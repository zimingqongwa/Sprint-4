#Basic Calculator

# This function adds two numbers
def add(x, y):
   return x + y

# This function subtracts two numbers
def subtract(x, y):
   return x - y

# This function multiplies two numbers
def multiply(x, y):
   return x * y

# This function divides two numbers
def divide(x, y):
   return x / y

print("Select Calculation to perform.")#allows user to select desired action
print("1.Add")
print("2.Subtract")
print("3.Multiply")
print("4.Divide")
print("5.Exit")

choice = input("Enter choice(1/2/3/4):") #this will take input from the user

number1 = int(input("Enter first number: "))
number2 = int(input("Enter second number: "))

if choice == '1':
   print(number1,"+",number2,"=", add(number1,number2))

elif choice == '2':
   print(number1,"-",number2,"=", subtract(number1,number2))

elif choice == '3':
   print(number1,"*",number2,"=", multiply(number1,number2))

elif choice == '4':
   print(number1,"/",number2,"=", 
divide(number1,number2))

elif  choice == '5':
    print("You are now exiting calculator ")

else:
   print("Invalid input")
